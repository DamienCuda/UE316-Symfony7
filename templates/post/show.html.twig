{% extends 'base.html.twig' %}

{% block title %}Article : {{ post.title }}{% endblock %}

{% block body %}

<div class="row">
    <div class="col-md-8">
        {% if post.image is not null and post.image != 'null' %}
        <img src="{{ post.image }}" alt="Image de l'article" class="img-fluid mb-3">
        {% else %}
        <img src="https://picsum.photos/800/400" alt="Image de l'article" class="img-fluid mb-3">
        {% endif %}
        <h1>{{ post.title }}</h1>
        <p class="text-muted">{{ post.updatedAt ? post.updatedAt|date('d-m-Y') : '' }}</p>
        <p>{{ post.content }}</p>
    </div>
    <div class="col-md-4">
    </div>
</div>

<div id="commentaire">

</div>


<a href="{{ path('app_post_index') }}" class="btn btn-sm btn-outline-secondary">Retour Ã  la liste</a>
{% if is_granted('ROLE_ADMIN') %}
<a href="{{ path('app_post_edit', {'slug': post.slug}) }}" class="btn btn-sm btn-outline-secondary">Modifier</a>
{% endif %}
{{ include('post/_delete_form.html.twig') }}
{% endblock %}