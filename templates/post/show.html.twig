{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ post.slug }}</td>
            </tr>
            <tr>
                <th>IsActu</th>
                <td>{{ post.isActu ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ post.image }}</td>
            </tr>
            <tr>
                <th>Meta</th>
                <td>{{ post.meta }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_post_index') }}" class="btn btn-sm btn-outline-secondary">Retour Ã  la liste</a>

    <a href="{{ path('app_post_edit', {'slug': post.slug}) }}" class="btn btn-sm btn-outline-secondary">Modifier</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
