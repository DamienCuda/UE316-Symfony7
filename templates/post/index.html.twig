{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <h1>Post index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>UpdatedAt</th>
                <th>Slug</th>
                <th>IsActu</th>
                <th>Image</th>
                <th>Meta</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.content }}</td>
                <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ post.slug }}</td>
                <td>{{ post.isActu ? 'Yes' : 'No' }}</td>
                <td>{{ post.image }}</td>
                <td>{{ post.meta }}</td>
                <td>
                    <a href="{{ path('app_post_show', {'slug': post.slug}) }}">show</a>
                    <a href="{{ path('app_post_edit', {'slug': post.slug}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_post_new') }}">Create new</a>
{% endblock %}
